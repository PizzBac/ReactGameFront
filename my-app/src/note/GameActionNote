https://app.code2flow.com/ - 플로우차트 자동으로 만들어주는 사이트

사이트에 아래 코드 붙여 넣어서 흐름 확인 가능.

게임 시작;
while(플레이어 수 >= 2) {
  턴 시작;
  switch(행동){
    case 소득 획득:
      1코인 획득;
      break;
    case 해외 원조 요청:
      원조 요청;
      if(방해(공작)) {
        if(의심) {
          if(공작){
            의심한 유저는 카드 버림;
            본인 턴인 유저는 코인 획득 실패;
          } else {
            블러핑한 유저는 카드 버림;
            자신의 턴인 유저는 2코인 획득;
          }
        } else {
          본인 턴인 유저는 코인 획득 실패;
        }
      } else {
        자신의 턴인 유저는 2코인 획득;
      }
      break;
    case 쿠데타:
      쿠데타 대상 지목;
      지목받은 플레이어는 카드 버림;
      break;
    case 세금 징수(공작):
      3코인 획득;
      break;
    case 암살(암살자):
      암살 대상 지목;
      3코인 소비;
      if(방해(백작부인)){
        if(의심) {
          if(백작부인){
            의심한 유저는 카드 버림;
            암살 실패;
          } else {
            블러핑한 유저는 카드 버림;
            암살 성공;
          }
        } else {
          암살 실패;
        }
      } else {
        암살 성공;
      }
      break;
    case 카드 교환(외교관):
      카드 교환 선언;
      if(의심) {
          if(외교관){
            의심한 유저는 카드 버림;
            카드 교환;
          } else {
            블러핑한 유저는 카드 버림;
          }
        } else {
          카드 교환;
        }
      break;
    case 훔치기(대장):
      훔치기 대상 지목;
      if(방해 {
        if(의심) {
          if(){
          } else {
          }
        } else {
        }
      } else {
      }
      break;
  }
  턴 종료;
}
게임 종료;